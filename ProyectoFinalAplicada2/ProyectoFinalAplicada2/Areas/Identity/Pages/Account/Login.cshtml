@page  "/"
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<center>
    <section class="form-register">
        <br />
        <br />

        <div class="container">
            <div class="ro">
                <div class="col s12 m7">
                    <div class="card">
                        <div class="card-content">
                            <center>
                                <h4 class="">Iniciar Sesi&oacute;n</h4>
                            </center>
                            <section>
                                <form asp-controller="Identity" asp-action="Login" method="post">

                                    <form id="account" method="post">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <div class="input-field col s12">
                                            <label asp-for="Input.Email"></label>
                                            <input asp-for="Input.Email" class="form-control"></input>
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                        <div class="input-field col s12">
                                            <label asp-for="Input.Password"></label>
                                            <input asp-for="Input.Password" class="form-control"></input>
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                        <center>
                                            <button type="submit" id="btnLogn" class="waves-effect waves-light btn">Iniciar seci&oacute;n</button>
                                        </center>
                                    </form>
                                </form>
                                <a>
                                    ¿No tienes una cuenta? <a href="Identity/Account/Register">Regístrate</a>
                                </a>
                            </section>
                            <br />
                            <label id="indexMessage" class="error">@Html.DisplayFor(m => m.ErrorMessage)</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</center>
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
